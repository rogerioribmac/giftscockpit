<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield">
    
    <Dialog
        id="idModifyItemFragment"
        title="{i18n>Item.ModifyHeader}"
        contentWidth="40rem"
        draggable="true"
        resizable="true"
        class="sapUiContentPadding" >
           
        <smartForm:SmartForm 
            id="idSmartFormModItem"
            editTogglable="false" 
            title="{parts: [
                {path: 'i18n>Item.Item'},
                {path: 'reservationItem'}
            ],
            formatter: '.formatDialogModifyItemTitle'}"
            editable="true"
            flexEnabled="false">

            <smartForm:Group>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{function}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{firstName}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{lastName}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{recipientCountry}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{reservedQuantity}" id="idReservedQuantitySmartField" />
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>

        <buttons>
            <Button icon="sap-icon://navigation-left-arrow" press="OnDialogModItemMoveLeft" id="idDialogModItemLeft"/>
            <Button icon="sap-icon://navigation-right-arrow" press="OnDialogModItemMoveRight" id="idDialogModItemRight"/>
            <Button text="Save" type="Emphasized" press="onSaveModifyItem"/>
            <Button text="Cancel" press="onCancelModifyItem"/>
        </buttons>

    </Dialog>

</core:FragmentDefinition>
