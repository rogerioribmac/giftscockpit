<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:core="sap.ui.core" >
    
    <smartTable:SmartTable
        id="idSmartTable"
        entitySet="zz_pv_gifts_ckpt_reservations"
        requestAtLeastFields="reservationCrit"
        smartFilterId="smartFilterBar"
        tableType="ResponsiveTable"
        showDetailsButton="true"
        enableExport="true"
        useVariantManagement="true"
        useTablePersonalisation="true"
        header="Reservations List"
        showRowCount="true"
        enableAutoBinding="true"
        demandPopin="true"
        enableAutoColumnWidth="true"
        app:useSmartToggle="true" >
        <Table mode="MultiSelect">
            <columns>
                <Column width="50px" hAlign="Begin">
                    <customData>
                        <core:CustomData key="p13nData" value='{"columnKey": "reservationIcon", "leadingProperty": "reservationIcon", "columnIndex": 1 }' />
                    </customData>
                    <Text text="{i18n>Main.ID}"/>
                </Column>       
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="onItemPress" highlight="{reservationCrit}">
                    <cells>
                        <VBox justifyContent="Center" alignItems="Center">
                            <core:Icon
                                src="{reservationIcon}"
                                color="Default"
                                decorative="false" />
                        </VBox>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <smartTable:customToolbar>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button icon="sap-icon://multi-select" text="{i18n>Main.DeselectAll}" press="onMainClearSelection" />
            </OverflowToolbar>
        </smartTable:customToolbar>
    </smartTable:SmartTable>

</core:FragmentDefinition>
