<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:core="sap.ui.core"
    xmlns:upload="sap.m.upload" >
    
    <upload:UploadSet
            id="idItemsUploadSet"
            instantUpload="true"
            showIcons="true"
            uploadEnabled="true"
            terminationEnabled="true"
            maxFileNameLength="30"
			maxFileSize="200"
            items="{to_attach}"
            afterItemAdded="onAfterItemAdded"
			uploadCompleted="onUploadCompleted"
            afterItemRemoved="onAfterItemRemoved"
            mode="MultiSelect">
        <upload:items>
            <upload:UploadSetItem
                    fileName="{fileName}"
                    mediaType="{mimeType}"
                    url="#"
                    openPressed="onAttachmentSelection"
                    statuses="{ path: 'to_status', templateShareable: false}"
                    app:fileContent="{binaryContent}" >
                    <upload:statuses>
						<ObjectStatus
								title="{title}"
								text="{text}" />
					</upload:statuses>
            </upload:UploadSetItem>
        </upload:items>
    </upload:UploadSet>

</core:FragmentDefinition>
