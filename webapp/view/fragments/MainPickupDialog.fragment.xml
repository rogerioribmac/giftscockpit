<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:layout="sap.ui.layout">
    
    <Dialog
        id="idPickupDialog"
        title="{i18n>Main.PickupDialog}"
        contentWidth="40rem"
        draggable="true"
        resizable="true"
        class="sapUiContentPadding" >
           
        <smartForm:SmartForm 
            id="idSmartFormPickup"
            editTogglable="false" 
            title="{parts: [
                {path: 'i18n>Main.Reservation'},
                {path: 'reservationNo'}
            ],
            formatter: '.formatDialogModifyHeaderTitle'}"
            editable="true"
            flexEnabled="false">

            <smartForm:Group>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{pickupDate}" id="idMainPickupDate" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{pickupTime}" id="idMainPickupTime" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{pickupDuration}" id="idMainPickupDuration" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{pickupComment}" />
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>

        <buttons>
            <Button icon="sap-icon://navigation-left-arrow" press="OnDialogPickupMoveLeft" id="idDialogPickupLeft"/>
            <Button icon="sap-icon://navigation-right-arrow" press="OnDialogPickupMoveRight" id="idDialogPickupRight"/>
            <Button text="Save" type="Emphasized" press="onSavePickupDialog"/>
            <Button text="Cancel" press="onCancelPickupDialog"/>
        </buttons>

    </Dialog>

</core:FragmentDefinition>
