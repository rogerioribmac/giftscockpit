<mvc:View 
        controllerName="com.ep.zgiftscockpit.controller.Main"
        xmlns:mvc="sap.ui.core.mvc" 
        xmlns:smartTable="sap.ui.comp.smarttable"
        xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
        xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
        xmlns="sap.m"
        displayBlock="true">

    <Page id="idPageMain">

        <smartFilterBar:SmartFilterBar 
            id="smartFilterBar" 
            entitySet="zz_dd_gifts_ckpt_reservations" 
            persistencyKey="SmartFilter_Explored" />

        <IconTabBar
            id="iconTabBar"
            class="sapUiResponsiveContentPadding"
            headerMode="Inline"
            expandable="false"
            select="onIconTabBarSelect"
            items="{
                path: '/zz_dd_gifts_ckpt_status_count',
                sorter: [{ path: 'sequence', descending: false }]
            }">
            <items>
                <IconTabFilter
                    key="{reservationStatus}"
                    text="{description}"
                    count="{totalRows}"
                    icon="{icon}" />
            </items>
        </IconTabBar>

        <smartTable:SmartTable
            id="idSmartTable"
            entitySet="zz_dd_gifts_ckpt_reservations"
            smartFilterId="smartFilterBar"
            tableType="ResponsiveTable"
            showDetailsButton="true"
            enableExport="true"
            useVariantManagement="true"
            useTablePersonalisation="true"
            header="Reservations List"
            showRowCount="true"
            enableAutoBinding="true"
            demandPopin="true"
            enableAutoColumnWidth="true"
            app:useSmartToggle="true" />

        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="{i18n>MainApprove}" press="onApprove" type="Accept" icon="sap-icon://accept"/>
                <Button text="{i18n>MainReject}" press="onReject" type="Reject" icon="sap-icon://decline"/>
                <Button text="{i18n>MainModifyHeader}" press="onModifyHeader" icon="sap-icon://edit"/>
                <Button text="{i18n>MainPickup}" press="onPickup" icon="sap-icon://enter-more"/>
                <Button text="{i18n>MainSeePDF}" press="onSeePDF" icon="sap-icon://pdf-reader"/>
            </Toolbar>
        </footer>
    </Page>

</mvc:View>
