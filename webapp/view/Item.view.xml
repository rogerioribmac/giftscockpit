<mvc:View 
        controllerName="com.ep.zgiftscockpit.controller.Item"
        xmlns:mvc="sap.ui.core.mvc" 
        xmlns:smartTable="sap.ui.comp.smarttable"
        xmlns:layout="sap.ui.layout"
        xmlns:goals="sap.uxap.sample.SharedBlocks.goals"
        xmlns:uxap="sap.uxap"
        xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
        xmlns="sap.m"
        displayBlock="true">

        <uxap:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false">

            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle>

                    <uxap:expandedHeading>
                        <Title text="{= 'Reservation ' + ${reservationNo} }" wrapping="true"/>
                    </uxap:expandedHeading>

                    <uxap:expandedContent>
						<Text text="{reservationStatusTxt}"/>
					</uxap:expandedContent>
                    <uxap:snappedContent>
						<Text text="{reservationStatusTxt}"/>
					</uxap:snappedContent>

                    <uxap:snappedHeading>
						<FlexBox fitContainer="true" alignItems="Center">
							<Avatar src="sap-icon://customer-order-entry" backgroundColor="Random" class="sapUiTinyMarginEnd"/>
                            <Title text="{= 'Reservation ' + ${reservationNo} }" wrapping="true"/>
                            <Text text="{reservationStatusTxt}"/>
						</FlexBox>
					</uxap:snappedHeading>

                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>

            <uxap:headerContent>
                <FlexBox wrap="Wrap">
                    <Avatar src="sap-icon://customer-order-entry" backgroundColor="Random" displaySize="L" class="sapUiTinyMarginEnd"/>

                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <ObjectStatus title="{i18n>ItemDG}" text="{dg}"/>
                        <ObjectStatus title="{i18n>ItemEventOrganizer}" text="{eventOrganizer}"/>
                        <ObjectStatus title="{i18n>ItemContactPerson}" text="{contactPerson}"/>
                        <ObjectStatus title="{i18n>ItemService}" text="{service}"/>
                        <ObjectStatus title="{i18n>ItemEventName}" text="{eventName}"/>
                    </layout:VerticalLayout>

                    <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                        <ObjectStatus title="{i18n>ItemEventCountry}" text="{eventCountryTxt}"/>
                        <ObjectStatus title="{i18n>ItemEventDate}" text="{ path: 'eventDate', type: 'sap.ui.model.type.Date' }"/>
                        <ObjectStatus title="{i18n>ItemNeedByDate}" text="{ path: 'needByDate', type: 'sap.ui.model.type.Date' }"/>
                        <ObjectStatus title="{i18n>ItemRequestor}" text="{requestor}"/>
                        <ObjectStatus title="{i18n>ItemComment}" text="{pickupComment}"/>
                    </layout:VerticalLayout>

                </FlexBox>
            </uxap:headerContent>

            <uxap:sections>
                    <uxap:ObjectPageSection titleUppercase="false" title="{ i18n>ItemItems}">
                        <uxap:subSections>
                            <uxap:ObjectPageSubSection titleUppercase="false">
                                <uxap:blocks>
                                    
                                    <smartTable:SmartTable
                                        id="idSmartTable2"
                                        entitySet="zz_dd_gifts_ckpt_reservations"
                                        smartFilterId="smartFilterBar"
                                        tableType="ResponsiveTable"
                                        showDetailsButton="true"
                                        enableExport="true"
                                        useVariantManagement="true"
                                        useTablePersonalisation="true"
                                        header="Reservations List"
                                        showRowCount="true"
                                        enableAutoBinding="true"
                                        demandPopin="true"
                                        enableAutoColumnWidth="true"
                                        app:useSmartToggle="true" >
                                        <Table >
                                            <items>
                                                <ColumnListItem type="Navigation" press="onItemPress" />
                                            </items>
                                        </Table>
                                    </smartTable:SmartTable>                                

                                </uxap:blocks>
                            </uxap:ObjectPageSubSection>
                        </uxap:subSections>
                    </uxap:ObjectPageSection>
            </uxap:sections>

        </uxap:ObjectPageLayout>

</mvc:View>